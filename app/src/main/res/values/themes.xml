<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YTPlaylistSync" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="android:itemBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorBackgroundFloating">@color/background</item>
        <item name="md_corner_radius">@dimen/text_size_medium</item>
        <item name="md_color_title">@color/textColor</item>
        <item name="md_color_content">@color/black</item>
        <item name="md_color_hint">@color/colorPrimary</item>
        <item name="md_ripple_color">@color/colorSecondary</item>
        <item name="md_background_color">@color/background</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.YTPlaylistSync">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>



</resources>